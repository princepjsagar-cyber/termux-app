[Unit]
Description=AI Search Bot Web (FastAPI)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/workspace
EnvironmentFile=/etc/telegram-bot.env
ExecStart=/usr/bin/python3 -m uvicorn webapp.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

